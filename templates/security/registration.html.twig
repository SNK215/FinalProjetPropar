{% extends "base.html.twig" %}

{% block title %}Inscription
{% endblock %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}
	<h2 style="text-align:center">
		{% if editMode %}
			Modification d'un utilisateur
		{% else %}
			Création d'un nouvel utilisateur
		{% endif  %}

	</h2>
	<div class="form" style="width:50%;margin-left:auto;margin-right:auto">
		{{form_start(form)}}

		{{form_row(form.nom, {"label": "Nom"})}}

		{{form_row(form.prenom, {"label": "Prénom"})}}

		{{form_row(form.username, {"label": "Adresse mail"})}}

		{{form_row(form.password, {"label": "Mot de passe"})}}

		{{form_row(form.confirm_password, {"label": "Confirmez le mot de passe"})}}

		{{form_row(form.roles, {"label": "Rôle"})}}

		</br>

		<button type="submit" class="btn btn-success">
			{% if editMode %}
				Enregister les modifications
			{% else %}
				Ajouter l'utilisateur
			{% endif  %}
		</button>
		{{form_end(form)}}
	</div>


{% endblock %}
